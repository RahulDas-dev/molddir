[flake8]
# Base flake8 configuration:
show-source = True
statistics = False
enable-extensions = G
exclude =
  ./.cache,
  ./.git,
  ./.idea,
  ./.mypy_cache,
  ./.pytest_cache,
  ./.venv,
  ./venv,
  ./.env,
  ./cached_venv,
  ./sqlite3,
  ./logs,
  ./.vscode,
  *migrations*,
  ./old_code
        
per-file-ignores = */__init__.py: F401 ,F403, cr_builder.py: E501 

# Plugins:
accept-encodings = utf-8
max-complexity = 6
inline-quotes = double
max-line-length = 120
docstring_style=sphinx

# Ignore some pydoctest checks globally:
ignore = D103, D401, PT009, E731, C901, W504 ,E203, W503      
spellcheck-targets = comments